<div class="thisDash">
<!-- -->
<div id="content">

    <div class="container">

      <div class="row">

        <div class="span3">

          <div class="account-container">

            <div class="account-avatar">
              <%= image_tag "placeholder_50x50.jpg" %>
            </div>
            <!-- /account-avatar -->

            <div class="account-details">
              <span class="account-name"><%= session[:user][:name] %></span>
              <span class="account-role">K-12 Teacher</span>
              <span class="account-actions dattt">
              <%= link_to "My Account", :action=> 'myaccount' %>
              </span>
            </div>
            <!-- /account-details -->

          </div>
          <!-- /account-container -->

          <hr />
          <ul id="main-nav" class="nav nav-tabs nav-stacked">
            <li><%= link_to 'Home',:action =>'dashboard',:controller => 'sessions' %></li>
            <li><%= link_to 'Courses',:action =>'index',:controller => 'courses' %></li>
            <li><%= link_to 'Assignments',:action =>'index',:controller => 'assignments' %></li>
            <li><%= link_to 'Students',:action =>'index',:controller => 'students' %></li>
            <li><%= link_to "My Account",:action =>'myaccount',:controller => 'sessions' %></li>
          </ul>
          <hr /><br />
        </div>  
        <div class="span9">

          <h1 class="page-title">
            <i class="icon-home"></i>
            Dashboard | Panel
          </h1>

          <div class="stat-container">

            <div class="stat-holder">
              <div class="stat">
                <span><%= @numass=Assignment.where("email = ?",session[:user][:email]).to_a.size %></span>
                Assignments
              </div>
              <!-- /stat -->
            </div>
            <!-- /stat-holder -->

            <div class="stat-holder">
              <div class="stat">
                <span>
                  <% newarray=Array.new%>
                  <% @numcourses=Course.where("teacher_id = ?",session[:user][:teacher_id]).to_a %>
                  <% @numcourses.each do |c| %>
                  <% newarray.push c.id %>
                  <% end %>
                  <% s_num = 0 %>
                  <% newarray.each do |id| %>
                  <% s_num += Student.where("course_id = ?", id).to_a.size %>
                  <% end %>
                  <%= s_num %></span>
                Students
              </div>
              <!-- /stat -->
            </div>
            <!-- /stat-holder -->

            <div class="stat-holder">
              <div class="stat">
                <span><%= @numcourse=Course.where("teacher_id = ?",session[:user][:teacher_id]).to_a.size %></span>
                Courses
              </div>
              <!-- /stat -->
            </div>
            <!-- /stat-holder -->

            <div class="stat-holder">
              <div class="stat">
                <span style="color: #ff5400"><%="#{currentIssueCount}"%></span>
                Issues
              </div>
              <!-- /stat -->
            </div>
            <!-- /stat-holder -->

          </div>
          <!-- /stat-container -->

       
          <!-- /widget -->

          <div class="widget widget-table">

            <div class="widget-header">
              <i class="icon-th-list"></i>
              <h3>Your Students</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">

              <table class="table table-striped table-bordered">
                <thead>
                  <% newarray.each do |id| %>
                  <% @s = Student.where("course_id = ?", id).to_a %>
                  <% end %>
                  <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>In Course</th>
                    <th>Overall Grade</th>
                  </tr>
                </thead>
<% @s.each do |student| %>
                <tbody>
                  <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= Course.where("id = ?",student.course_id).to_a.last.name %></td>
                    <td><%= student.grade %></td>
                  </tr>
                </tbody>
  <% end %>
              </table>

            </div>
            <!-- /widget-content -->

          </div>
            <p class="feedMe">
    Gradesnap is always looking to improve. Please
    <%= link_to "contact us", :action =>
    'new', :controller => 'contacts' %> with all of your feedback.
  </p>
          <!-- /widget -->
</div>

        </div>
        <!-- /span9 -->

      </div>
      <!-- /row -->

    </div>
    <!-- /container -->

  </div>
