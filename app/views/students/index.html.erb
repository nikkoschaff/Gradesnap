<div class="bodyWrapper">
  <div class="container">
    <h1 class="courseH">Listing students</h1>
    <h2>Name</h2>
      <ul class="nav nav-tabs nav-stacked">
      <li></li>
    </ul>

    <% @students.each do |student| %>
    <p>
    <tr>
      <td><%= link_to "#{student.first_name}  #{student.middle_name}  #{student.last_name}", student %></td> | 
      <td><%= link_to "Statistics", :action => 'show', :controller => 'stats', :id => student.id, :code => "student" %></td> |   
      <b>Current grade:</b> <%= student.grade %>
    </tr>
    </p>
    <% end %>

    <br />

      <div class="backB">
        <ul>
          <li>
            <%= link_to 'Back', :action => 'dashboard', :controller => 'sessions' %>
          </li>
          <li><%= link_to 'Add students', :action => 'new', :controller => 'students' %>
          </li>
        </ul>
      </div>
  </div>
</div>
