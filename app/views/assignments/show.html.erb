<div class="bodyWrapper">
  <div class="container">
    <p id="notice"><%= notice %></p>
        <p>
        <b>Name:</b>
        <%= @show_hash_assignment[:assignment].name %>
        </p>

        <p>
        <b>Average:</b>
        <%= mean(@show_hash_assignment[:assignment].grades) * 100 %>%
        </p>
        <b>Students:</b><p>

        <% if @students_hash != nil %>
            <% @students_hash.each do |s, as| %>
                <p>
                <tr>
                <td><%= link_to "#{s.full_name}", s %></td>
                  <b>Grade recieved:</b>
                  <%= as.grade * 100 %>
                </tr>
                </p>
            <% end %>
            </p>

        <% else%>
            <p>
                No students.
            </p>
            
        <% end %>
        <%= link_to 'Back', :action => 'index', :controller => 'assignments' %> |

        <%= link_to 'Destroy', @show_hash_assignment[:assignment], :method => :delete, data: { confirm: 'Are you sure?' }  %> |

        <%= link_to 'Spreadsheet', :action => 'new', :controller => 'exportsheets', :id => @show_hash_assignment[:assignment].id %> |

        <%= link_to "Statistics", :action => 'show', :controller => 'stats', :id => @show_hash_assignment[:assignment].id, :code => "assignment" %>
  </div>
</div>
