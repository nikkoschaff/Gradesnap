<div class="bodyWrapper">
  <div class="container">
    <p id="notice"><%= notice %></p>
        <p>
        <b>Name:</b>
        <%= @show_hash_assignment[:assignment].name %>
        </p>

        <p>
        <b>Average:</b>
        <%= mean(@show_hash_assignment[:assignment].grades) * 100 %>%
        </p>
        <b>Students:</b><p>

        <% if @students_hash != nil %>
            <% @students_hash.each do |s, as| %>
                <p>
                <tr>
                <td><%= link_to "#{s.first_name}  #{s.middle_name}  #{s.last_name}", s %></td>
                  <b>Grade recieved:</b>
                  <%= as.grade * 100 %>
                </tr>
                </p>
            <% end %>
            </p>

        <% else%>
            <p>
                No students.
            </p>
            
        <% end %>
        <%= link_to 'Back', :action => 'index', :controller => 'assignments' %> ||

        <%= link_to 'View students and excel', :action => 'new', :controller => 'exportsheets', :id => @show_hash_assignment[:assignment].id %>

        <%= link_to "Statistics", :action => 'show', :controller => 'stats', :id => @show_hash_assignment[:assignment].id, :code => "assignment" %>
        <!-- Currently empty until detailed editing features placed in -->
        <!-- <%= link_to 'Edit', edit_course_path(@assignment) %> | -->
  </div>
</div>
