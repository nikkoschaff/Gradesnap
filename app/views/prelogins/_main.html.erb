<div id="login" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3 class="FH">Login</h3>
  </div>
  <div class="modal-body">
    <%= form_tag :action=>
    "login", :validate => true %>
    <h3>Login</h3>
    <h4>
      <% if session[:user] != nil %>
      <%= session[:user].email %>
      <% else %>
      <%=h "There is currently no one logged in" %>
      <% end %></h4>
    <label for="user_login">Email:</label>
    <br/>
    <%= text_field "user", "email", :size =>
    20 %>
    <br/>
    <label for="user_password">Password:</label>
    <br/>
    <%= password_field "user", "password", :size =>
    20 %>
    <br/>
    <%= submit_tag "Submit", :class => 'btn btn-success'%>
    <div class="forgot">
      <%= link_to 'Forgot password', :action =>'forgot_password', :controller => 'prelogins' %></div>
    <% $end -%></div>
</div>
